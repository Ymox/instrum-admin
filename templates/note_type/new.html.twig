{% extends app.request.xmlHttpRequest ? 'base_modal.html.twig' : 'base.html.twig' %}

{% block title %}{{ ('app.noteType.new.heading')|trans }}{% if not app.request.xmlHttpRequest %} | {{ parent() }}{% endif %}{% endblock %}

{% block body %}
	{% if not app.request.xmlHttpRequest %}
	<h1>{{ ('app.noteType.new.heading')|trans }}</h1>
	{% endif %}

	{{ include('note_type/_form.html.twig') }}

	<ul class="list-inline float-end">
		<li class="list-inline-item">
			{%- if not app.request.xmlHttpRequest -%}
			<a href="{{ path('note_type_index') }}" class="btn btn-light"><i class="fas fa-list" title="{{ 'global.action.list'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.list'|trans }}</span></a>
			{%- else -%}
			<button type="button" class="btn btn-light" data-bs-dismiss="modal">{{ 'global.action.close'|trans }}</a>
			{%- endif -%}
		</li>
	</ul>
{% endblock %}

{% block javascripts %}
		<script src="{{ asset('js/icon_verifier.js') }}"></script>
{% endblock javascripts %}