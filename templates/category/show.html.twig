{% extends 'base.html.twig' %}

{% block title %}Category | {{ parent() }}{% endblock %}

{% block body %}
	<h1>Category</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ category.name }}</td>
			</tr>
		</tbody>
	</table>

	<ul class="list-inline float-end">
		<li class="list-inline-item">
			<a href="{{ path('category_index') }}" class="btn btn-light"><i class="fas fa-list" title="{{ 'global.action.list'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.list'|trans }}</span></a>
		</li>
		<li class="list-inline-item">
			<a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning"><i class="fas fa-pencil-alt" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
		</li>
		<li class="list-inline-item">
			{{ include('category/_delete_form.html.twig') }}
		</li>
	</ul>
{% endblock %}
