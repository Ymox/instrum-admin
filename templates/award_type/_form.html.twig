{{ form_start(form) }}
	<div class="row mb-3">
		{{ form_row(form.name, {'row_attr': {'class': 'col-12 col-sm-6 col-xl-8'}}) }}
		{{ form_row(form.years, {'row_attr': {'class': 'col-6 col-sm-2'}}) }}
		{{ form_row(form.eligibleStatuses, {'row_attr': {'class': 'col-6 col-sm-4 col-xl-2'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_row(form.column, {'row_attr': {'class': 'col-6'}}) }}
		{{ form_row(form.statusToAward, {'row_attr': {'class': 'col-6'}}) }}
	</div>
	<button type="submit" title="{{ 'global.action.validate'|trans }}" class="btn btn-primary float-start"><i class="fas fa-check" title="{{ 'global.action.validate'|trans }}" aria-hidden="true"></i></button>
{{ form_end(form) }}