{% extends 'base.html.twig' %}

{% block title %}{{ 'app.status.index.heading'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ 'app.status.index.heading'|trans }}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>{{ 'app.fields.status.name.label'|trans }}</th>
				<th><a href="{{ path('status_new') }}" class="btn btn-sm btn-success">{{ 'global.action.new'|trans }}</a></th>
			</tr>
		</thead>
		<tbody>
		{% for status in statuses %}
			<tr>
				<td>{% if status.lvl > 0 %}{% for i in 0..(status.lvl - 1) %}      {% endfor %}{% endif %}{{ status.name }}</td>
				<td>
					<a href="{{ path('status_edit', {'id': status.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fas fa-pencil-alt" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

{% endblock %}
