{% extends app.request.xmlHttpRequest ? 'base_modal.html.twig' : 'base.html.twig' %}

{% block title %}{{ instrument }} {{ instrument.brand }} {{ instrument.number }}{% if not app.request.xmlHttpRequest %} | {{ parent() }}{% else %}<br />
<small>{{ 'app.instrument.assign.assigned_to'|trans({'member': instrument.recipient}) }}</small>{% endif %}{% endblock %}

{% block body %}
	{% if not app.request.xmlHttpRequest %}
	<h1>{{ instrument }} {{ instrument.brand }} {{ instrument.number }}<br />
		<small>{{ 'app.instrument.assign.assigned_to'|trans({'member': instrument.recipient}) }}</small></h1>
	{% endif %}

	{{ form_start(form, {'attr': {'class': app.request.xmlHttpRequest ? 'ajaxify' : null}}) }}
		{{ form_row(form.recipient, {'row_attr': {'class': 'col-sm-12 mb-3'}, 'attr': {'class': 'searchable', 'data-dropdown-parent': (app.request.xmlHttpRequest ? '#Modal' : 'body')}}) }}
		<button type="submit" title="{{ 'global.action.validate'|trans }}" class="btn btn-primary float-start"><i class="fas fa-check" title="{{ 'global.action.validate'|trans }}" aria-hidden="true"></i></button>
	{{ form_end(form) }}
{% endblock %}
