{% extends app.request.xmlHttpRequest ? 'base_modal.html.twig' : 'base.html.twig' %}

{% block title %}{{ instrument }}{% if not app.request.xmlHttpRequest %} | {{ parent() }}{% else %}<br />
<small>{{ instrument.brand }} {{ instrument.number }}</small>{% endif %}{% endblock %}

{% block body %}
	{% if not app.request.xmlHttpRequest %}
	<h1>{{ instrument }}<br />
		<small>{{ instrument.brand }} {{ instrument.number }}</small></h1>
	{% endif %}

	{{ include('instrument/_form.html.twig') }}

	{% if not app.request.xmlHttpRequest %}
	<ul class="list-inline float-end">
		<li class="list-inline-item">
			<a href="{{ path('instrument_index') }}" class="btn btn-light"><i class="fas fa-list" title="{{ 'global.action.list'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.list'|trans }}</span></a>
		<li>
		<li class="list-inline-item">
			{{ include('instrument/_delete_form.html.twig') }}
		</li>
	</ul>
	{% endif %}
{% endblock %}

{% block javascripts %}
		<script src="{{ asset('js/dynamic_options.js') }}"></script>
{% endblock %}