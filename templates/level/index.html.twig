{% extends 'base.html.twig' %}

{% block title %}{{ 'app.Level.index.heading'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ 'app.Level.index.heading'|trans }}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for level in levels %}
			<tr>
				<td>{{ level.id }}</td>
				<td>{{ level.name }}</td>
				<td>
					<a href="{{ path('level_show', {'id': level.id}) }}" class="btn btn-outline-info">{{ 'global.action.show'|trans }}</a>
					<a href="{{ path('level_edit', {'id': level.id}) }}" class="btn btn-outline-warning"><i class="fas fa-pencil-alt" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('level_new') }}" class="btn btn-sm btn-success">{{ 'global.action.new'|trans }}</a>
{% endblock %}
